{
    "name": "cel",
    "displayName": "Cel",
    "description": "",
    "version": "0.0.2",
    "publisher": "cel-lang",
    "icon": "images/cel.png",
    "engines": {
        "vscode": "^1.17.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/cel-lang/vscode-cel"
    },
    "categories": [
        "Languages",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:cel"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [{
            "id": "cel",
            "aliases": ["Cel", "CEL", "cel"],
            "extensions": [".cel"],
            "configuration": "./cel.configuration.json"
        }],
        "grammars": [{
            "language": "cel",
            "scopeName": "source.cel",
            "path": "./syntaxes/cel.json"
        }],
        "commands": [{
            "command": "extension.format",
            "title": "Format Cel Code"
        }]
    },
    "configuration": {
        "type": "object",
        "title": "Ocaml configuration",
        "properties": {
            "cel.indentOnSave": {
                "type": "boolean",
                "default": true,
                "description": "Run ocp-indent on save."
            },
            "cel.formatToolPath": {
                "type": "string",
                "default": "C:\\OCaml64\\home\\averym\\.opam\\4.03.0+mingw64c\\bin\\ocp-indent",

                "description": "Path for code format tool."
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.3",
        "vscode": "^1.1.5",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "live-server": "^1.2.0"
    }
}